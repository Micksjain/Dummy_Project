<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundwallpaper"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GENERAL"
            android:textStyle="bold"
            android:padding="10dp"
            android:textSize="20sp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="380dp"
        app:cardCornerRadius="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/text_Theme"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="18sp"
            android:drawableEnd="@drawable/theme"
            android:text="Theme"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/text_Subscription"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:textSize="18sp"
            android:drawableEnd="@drawable/autorenew"
            android:layout_marginTop="55dp"
            android:text="Subscription" />

        <TextView
            android:id="@+id/text_Sound"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="18sp"
            android:padding="10dp"
            android:drawableEnd="@drawable/music"
            android:layout_marginTop="110dp"
            android:text="Sound" />


        <TextView
            android:id="@+id/text_Reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="165dp"
            android:drawableEnd="@drawable/notifications"
            android:padding="10dp"
            android:text="Reminder"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_Location"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:drawableEnd="@drawable/location"
            android:textSize="18sp"
            android:layout_marginTop="220dp"
            android:text="Location" />

        <TextView
            android:id="@+id/text_Contact"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:textSize="18sp"
            android:drawableEnd="@drawable/email"
            android:layout_marginTop="275dp"
            android:text="Contact Us" />


        <TextView
            android:id="@+id/text_Logout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:textSize="18sp"
            android:drawableEnd="@drawable/logout"
            android:layout_marginTop="330dp"
            android:text="LogOut" />



    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABOUT"
        android:textStyle="bold"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:textSize="20sp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginStart="5dp"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/custom_textview"
        android:layout_height="156dp">

    <TextView
        android:id="@+id/text_About"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="About App"
        android:textSize="18sp"
        android:drawableEnd="@drawable/abouts"
        android:padding="10dp"/>

        <TextView
            android:id="@+id/text_Support"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:padding="10dp"
            android:layout_marginTop="50dp"
            android:text="Support (24 x 7)"
            android:drawableEnd="@drawable/technicalsupport"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/text_Licenses"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:padding="10dp"
            android:layout_marginTop="98dp"
            android:text="Open Source Licenses"
            android:drawableEnd="@drawable/refreshshield"
            android:textSize="18sp" />



    </androidx.cardview.widget.CardView>


</LinearLayout>